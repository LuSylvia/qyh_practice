<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 自定义验证码输入框-->
    <declare-styleable name="DentifyingCodeView">
        <attr name="figures" format="integer" /><!--验证码的个数-->
        <attr name="codeMargin" format="dimension" /><!--验证码的之间的间隔-->
        <attr name="selectBorderColor" format="reference" /><!--选中的边框颜色-->
        <attr name="normalBorderColor" format="reference" /><!--普通的边框颜色-->
        <attr name="borderRadius" format="dimension" /><!--边角的滑度 -->
        <attr name="borderWidth" format="dimension" /><!--边框的厚度 -->
        <attr name="cursorDuration" format="integer" /><!--光标跳动的间隔时间 -->
        <attr name="cursorWidth" format="dimension" /><!--光标的宽度 -->
        <attr name="cursorColor" format="color|reference" /><!--光标的颜色 -->


    </declare-styleable>



    <declare-styleable name="ZhenAiCircle">
        <attr name="smallCircleRadius" format="dimension" /><!-- 小圆半径-->
        <attr name="smallCircleColor" format="color|reference" /><!-- 小圆颜色-->
        <attr name="diffusionCircleColor" format="color|reference" /><!-- 扩散圆颜色-->
        <attr name="startScan" format="boolean" /><!--是否开启扫描-->
        <attr name="startDiffuse" format="boolean"/> <!--是否开启扩散-->
    </declare-styleable>

    <declare-styleable name="ZhenAiCircleV2">
        <attr name="smallCircleRadiusV2" format="dimension" /><!-- 小圆半径-->
        <attr name="smallCircleColorV2" format="color|reference" /><!-- 小圆颜色-->
        <attr name="diffusionCircleColorV2" format="color|reference" /><!-- 扩散圆颜色-->
        <attr name="startScanV2" format="boolean" /><!--是否开启扫描-->
        <attr name="startDiffuseV2" format="boolean"/> <!--是否开启扩散-->


    </declare-styleable>
</resources>